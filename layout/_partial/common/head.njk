<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% if is_home() %}{{ config.title | default("白夜書簡", true) }}{% elif is_post() %}{{ page.title }} | {{ config.title | default("白夜書簡", true) }}{% else %}{{ page.title }} | {{ config.title | default("白夜書簡", true) }}{% endif %}</title>

    <!-- Favicon -->
    {% if theme.site.favicon %}
    <link rel="icon" href="{{ url_for(theme.site.favicon) }}" />
    {% endif %}

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightgallery/2.8.3/css/lightgallery.min.css">
    {% if config.syntax_highlighter == "highlight.js" %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/github.min.css">
    {% endif %}
    <link rel="stylesheet" href="{{ url_for('css/style.min.css') }}">

    <style>
        .section-divider-sentinel {
            height: 1px;
            margin-top: -1px;
            pointer-events: none;
        }
        .to-top-btn {
            position: fixed;
            right: 1.4rem;
            bottom: 1.6rem;
            width: 2.6rem;
            height: 2.6rem;
            border-radius: 999px;
            border: 1px solid rgba(148, 163, 184, 0.35);
            background: rgba(255, 255, 255, 0.9);
            color: #1f2937;
            font-size: 1.1rem;
            line-height: 1;
            box-shadow: 0 8px 20px rgba(15, 23, 42, 0.12);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            pointer-events: none;
            transform: translateY(8px);
            transition: opacity 0.2s ease, transform 0.2s ease, background 0.2s ease, border-color 0.2s ease;
            z-index: 40;
        }
        .to-top-btn svg {
            width: 1.2rem;
            height: 1.2rem;
            fill: currentColor;
        }
        .to-top-btn:hover {
            background: #0f172a;
            color: #fff;
            border-color: #0f172a;
        }
        .to-top-btn.is-visible {
            opacity: 1;
            pointer-events: auto;
            transform: translateY(0);
        }
        @media (max-width: 640px) {
            .to-top-btn {
                right: 0.9rem;
                bottom: 1rem;
                width: 2.3rem;
                height: 2.3rem;
            }
        }
        @media (max-width: 480px) {
            .to-top-btn {
                display: none;
            }
        }
        @media (prefers-reduced-motion: reduce) {
            .to-top-btn {
                transition: none;
            }
        }
    </style>

    <!-- Inline override: increase prose width only on post pages so posts/code can use more horizontal space without rebuilding CSS -->
    {% if is_post() %}
    <style>
        /* Make article prose wider (override compiled CSS) only on post pages */
        .prose-shiro { max-width: 85ch !important; }
        /* For very wide code blocks inside highlight, allow horizontal scrolling if still too long */
        .prose-shiro .highlight { overflow-x: auto; }
        /* Override highlight.js theme background to match shiro code block tone */
        .prose-shiro .highlight,
        .prose-shiro pre,
        .prose-shiro pre code,
        .prose-shiro .hljs { background: var(--color-slate-100) !important; }
        /* Code block copy button */
        .prose-shiro .highlight { position: relative; }
        .prose-shiro .code-copy-btn {
            position: absolute;
            top: 0.6rem;
            right: 0.6rem;
            border-radius: 0.5rem;
            border: 1px solid var(--color-slate-300);
            background: #ffffffcc;
            color: var(--color-slate-700);
            width: 1.75rem;
            height: 1.75rem;
            padding: 0;
            cursor: pointer;
            backdrop-filter: blur(4px);
            transition: all 0.2s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            pointer-events: none;
        }
        .prose-shiro .highlight:hover .code-copy-btn {
            opacity: 1;
            pointer-events: auto;
        }
        .prose-shiro .code-copy-btn svg {
            width: 1rem;
            height: 1rem;
            fill: currentColor;
        }
        .prose-shiro .code-copy-btn:hover {
            background: var(--color-slate-800);
            color: #fff;
            border-color: var(--color-slate-800);
        }
        .prose-shiro .code-copy-btn[data-copied="true"] {
            background: var(--color-slate-900);
            color: #fff;
            border-color: var(--color-slate-900);
        }
    </style>
    {% endif %}

    {% if page.layout == "about" %}
    <style>
        .about-simple { text-align: center; }
        .about-simple .about-avatar {
            width: 9rem;
            height: 9rem;
            margin: 0 auto;
        }
        .about-simple .about-avatar img {
            width: 100%;
            height: 100%;
            display: block;
            border-radius: 999px;
            object-fit: cover;
        }
        .about-simple .about-names { margin-top: 1.25rem; }
        .about-simple .about-name-primary {
            font-family: var(--font-title);
            font-size: 1.5rem;
            line-height: 1.25;
            color: var(--color-slate-900);
        }
        .about-simple .about-name-secondary {
            margin-top: 0.25rem;
            font-size: 1.05rem;
            letter-spacing: 0.08em;
            color: var(--color-slate-500);
        }
        .about-simple .about-slogan {
            margin-top: 1.25rem;
            color: var(--color-slate-700);
            letter-spacing: 0.08em;
            font-weight: 500;
        }
        .about-simple .about-slogan.font-yuji-boku {
            font-family: "Yuji Boku","Yuji Syuku","Zen Old Mincho","Noto Serif JP",serif;
        }
        .about-simple .about-slogan.font-yuji-syuku {
            font-family: "Yuji Syuku","Yuji Boku","Zen Old Mincho","Noto Serif JP",serif;
        }
        .about-simple .about-social {
            margin-top: 1rem;
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
        }
        .about-simple .social-icon {
            width: 28px;
            height: 28px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 999px;
            line-height: 1;
        }
        .about-simple .social-icon svg {
            width: 100%;
            height: 100%;
            display: block;
        }
        .about-simple .social-linkedin:hover {
            color: #0a66c2;
        }
    </style>
    {% endif %}

    <!-- Analytics -->
    {% include "../analytics/google.njk" %}
</head>
